# Use a Fedora bootable image as the base
FROM quay.io/fedora-ostree-desktops/silverblue:42

# Commit the base image for bootc to track changes
RUN ostree container commit

RUN rpm-ostree install \
    gnome-tweaks \
	stow \
    git \
    openssl \
    openssl-devel \
	kitty \
	distrobox \
	openconnect \
	cifs-utils \
	gvim \
	neovim \
	tmux \
	fzf \
	atuin \
    flatpak

